<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SharelistPage">

    <Button
        android:id="@+id/sharelist_btn_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="로그아웃" />

    <Button
        android:id="@+id/sharelist_btn_mypage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="내 버킷리스트 공유하기" />

    <TextView
        android:id="@+id/sharelist_text_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="사용자 누군지 임시로"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/sharelist_rview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>