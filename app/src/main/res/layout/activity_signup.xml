<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical"
    tools:context=".SignupActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="20dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:gravity="center"
        android:textSize="30dp"
        android:text="회원가입" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/signup_edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="25dp"
        android:padding="10dp"
        android:background="@drawable/round_rectangle"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:hint="이메일" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/signup_edit_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="25dp"
        android:padding="10dp"
        android:background="@drawable/round_rectangle"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:hint="비밀번호" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="10dp" />

    <EditText
        android:id="@+id/signup_edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="25dp"
        android:padding="10dp"
        android:background="@drawable/round_rectangle"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:hint="닉네임" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="30dp" />

    <Button
        android:id="@+id/signup_btn_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/round_color_rectangle"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/bmjua"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:text="닉네임 중복 검사" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="10dp" />

    <Button
        android:id="@+id/signup_btn_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/yellow_round_rectangle"
        android:textColor="@color/colorWhite"
        android:fontFamily="@font/bmjua"
        android:gravity="center"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:text="회원가입" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/bmjua"
        android:textSize="120dp" />

</LinearLayout>