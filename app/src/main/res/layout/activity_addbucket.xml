<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/addbucket_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBrown"
    android:orientation="vertical"
    tools:context=".AddbucketActivity">

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="20dp"
            android:background="@drawable/round_rectangle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/add_text_guide"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmjua"
                    android:textSize="30dp"
                    android:gravity="center"
                    android:text="새 버킷리스트 신청서" />

                <ImageView
                    android:src="@drawable/pic_done_final"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_width="100dp"
                    android:layout_height="50dp"/>

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/add_text_guide0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:textSize="20dp"
                android:text="1. 어떤 버킷리스트인가요?" />

            <EditText
                android:id="@+id/add_edit_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/bmjua"
                android:textSize="25dp"
                android:padding="5dp"
                android:background="@drawable/round_rectangle"
                android:hint="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:textSize="20dp"
                android:text="2. 어떤 분류인가요?" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/add_spinner"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="40dp"/>

                <Button
                    android:id="@+id/add_btn_cateadd"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="30dp"
                    android:background="@drawable/round_color_rectangle"
                    android:textColor="@color/colorWhite"
                    android:fontFamily="@font/bmjua"
                    android:layout_gravity="center_vertical"
                    android:text="추가"
                    android:textSize="15dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:textSize="20dp" />

            <Button
                android:id="@+id/add_btn_help"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/round_color_rectangle"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/bmjua"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="15dp"
                android:text="해시태그 추가"/>

            <TextView
                android:id="@+id/add_text_guide1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:textSize="20dp"
                android:visibility="gone"
                android:text="2-1. 첫 번째 태그" />

            <EditText
                android:id="@+id/add_edit_detailwhy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:background="@drawable/round_rectangle"
                android:fontFamily="@font/bmjua"
                android:visibility="gone"
                android:padding="5dp"
                android:hint="" />

            <TextView
                android:id="@+id/add_text_guide2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:textSize="20dp"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:text="2-2. 두 번째 태그" />

            <EditText
                android:id="@+id/add_edit_detailwho"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:padding="5dp"
                android:background="@drawable/round_rectangle"
                android:visibility="gone"
                android:hint="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:textSize="20dp"
                android:text="3. 더 쓰고 싶은말이 있나요?" />


            <EditText
                android:id="@+id/add_edit_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:layout_marginTop="10dp"
                android:textSize="25dp"
                android:padding="5dp"
                android:background="@drawable/round_rectangle"
                android:hint="" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmjua"
                android:textSize="20dp" />

            <Button
                android:id="@+id/add_btn_add"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/yellow_round_rectangle"
                android:textColor="@color/colorWhite"
                android:fontFamily="@font/bmjua"
                android:textSize="15dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:text="완료" />

            <TextView
                android:id="@+id/add_text_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRed"
                android:text="" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>